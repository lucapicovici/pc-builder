<%- include("../../partials/header.ejs"); %>

<div class="container">
    <h1>Products page</h1>
    
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Fan Size</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            <% cpuCoolerItems.forEach(function(cpuCooler){ %>
                <tr>
                    <td><a href="/products/cpu-cooler/<%= cpuCooler._id %>"><%= cpuCooler.brand %> <%= cpuCooler.name %></a></td>
                    <td><%= cpuCooler.type %></td>
                    <td><%= cpuCooler.fanSize %> mm</td>
                    <td>$<%= cpuCooler.price %></td>
                    <td><a class="btn btn-primary btn-sm" href="#">Add</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include("../../partials/footer.ejs"); %>