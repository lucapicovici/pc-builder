<%- include("../../partials/header.ejs"); %>

<div class="cpuTitle">
    <h1>Choose A CPU</h1>
</div>

<div class="cpuTable">
    <table class="container table table-hover">
        <thead class="cpuTableHead">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Cores</th>
            <th scope="col">Frequency</th>
            <th scope="col">Socket</th>
            <th scope="col">Price</th>
            <th scope="col">&nbsp</th>
          </tr>
        </thead>
        <tbody class="cpuTableBody">
            <% cpuItems.forEach(function(cpu){ %>
                <tr>
                    <td><a href="/products/cpu/<%= cpu._id %>"><%= cpu.brand %> <%= cpu.name %></a></td>
                    <td><%= cpu.cores %></td>
                    <td><%= cpu.frequency %> GHz</td>
                    <td><%= cpu.socket %></td>
                    <td>$<%= cpu.price %></td>
                    <td><a class="btn btn-primary btn-sm" href="/products/add-to-cart/cpu/<%= cpu._id %>">Add</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include("../../partials/footer.ejs"); %>